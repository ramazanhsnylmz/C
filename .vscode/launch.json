{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "C/C++ Runner: Debug Session",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/build/Release/outRelease.exe", // Derlenen programın yolu
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}", // Çalışma dizini
          "environment": [],
          "externalConsole": true, // Terminalin harici konsolda açılmasını sağlar
          "MIMode": "gdb",
          "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // GDB'nin tam yolu
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}